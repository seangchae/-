print("=== ê³µë¶€ ì‹œê°„ ê´€ë¦¬ í”„ë¡œê·¸ë¨ ===")

subjects = input("ê³¼ëª©ë“¤ì„ ê³µë°±ìœ¼ë¡œ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: êµ­ì–´ ì˜ì–´ ìˆ˜í•™): ").split() #ê³µë¶€ ê³¼ëª© ì…ë ¥ë°›ê¸°

goals = [] #ê³µë¶€ ê³¼ëª©ì„ ë¦¬ìŠ¤íŠ¸ëê¹Œì§€ ë°˜ë³µë¬¸ ëŒë ¤ì„œ ê³¼ëª©ë§ˆë‹¤ ëª©í‘œ ê³µë¶€ ì‹œê°„ ê³¼ëª©ë§ˆë‹¤ ì…ë ¥ë°›ê¸°
for s in subjects:
    g = int(input(f"{s}ì˜ í•˜ë£¨ ëª©í‘œ ê³µë¶€ ì‹œê°„(ì‹œê°„ ë‹¨ìœ„)ì„ ì…ë ¥í•˜ì„¸ìš”: "))
    goals.append(g)

print("\n--- ì˜¤ëŠ˜ ê³µë¶€ ì‹œê°„ ì…ë ¥ ---")
study_times = []

for i in subjects: #ë¦¬ìŠ¤íŠ¸ ëê¹Œì§€ ë°˜ëª©ë¬¸ ëŒë ¤ì„œ ì‹¤ì œë¡œ ê³µë¶€í•œ ì‹œê°„ì„ ì…ë ¥ë°›ê³  study.timeë¦¬ìŠ¤íŠ¸ì— í•˜ë‚˜ì”© ì§‘ì–´ë„£ê¸°
    t = float(input(f"{s} ê³µë¶€í•œ ì‹œê°„(ì‹œê°„ ë‹¨ìœ„): "))
    study_times.append(t)

total = sum(study_times) #study.timeì— ë“¤ì–´ìˆëŠ” ëª¨ë“  ìš”ì†Œ ë”í•œí›„ totalë³€ìˆ˜ì— ì €ì¥
print(f"\nì˜¤ëŠ˜ ì´ ê³µë¶€ ì‹œê°„: {total:.1f}ì‹œê°„")

print("\n--- ê³¼ëª©ë³„ ë¶„ì„ ---")

for i in range(len(subjects)):#subject ë¦¬ìŠ¤íŠ¸ì˜ ê¸¸ì´ë§Œí¼ ë°˜ë³µë¬¸ì„ ëŒë¦¼. ê°ê°ì˜ ìë¦¬ì— ë§ëŠ” ê²ƒì— ëŒ€ì‘ì´ ë¨.
    subject = subjects[i]
    target = goals[i]
    real = study_times[i]

    percentage = (real / target) * 100

    if percentage >= 100: #ì„±ì·¨ìœ¨ì—ë”°ë¼ ê° ê³¼ëª©ì˜ ì„±ì·¨ë„ ì¶œë ¥
        level = "ì•„ì£¼ ì˜í•¨ â­"
    elif percentage >= 70:
        level = "ë³´í†µ ğŸ˜Š"
    else:
        level = "ë¶€ì¡± ğŸ˜¢"

    print(f"{subject}: {real}ì‹œê°„ / ëª©í‘œ {target}ì‹œê°„ ({percentage:.1f}%) â†’ {level}")

