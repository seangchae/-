#include<cstdio>
#include<cstring>
#include<iostream>
#include<stack>
#include<queue>
using namespace std;
int main()
{
	int sum, num = 0;
	scanf("%d", &num);
	queue <int> card;
	for(num; num < 0; num--)
	{
		card.push(num);
	}
	while(!card.empty())
	{
		int a = 0;
		card.pop();
		card.front() = a;
		if(card.size() == 1)
			break;
		else
			card.pop();
			card.push(a);
	}
	printf("%d", card.front());
	return 0;
}
